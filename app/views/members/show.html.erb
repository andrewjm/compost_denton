<% provide( :title, @member.first_name ) %>
<div class="row">
  <aside class="col-md-4">
    <h1><%= @member.first_name %> <%= @member.last_name %></h1>
    <h4><%= @member.address_line_one %></h4>
    <% if @member.address_line_two.present? %>
      <h4><%= @member.address_line_two %></h4>
    <% end %>
    <h4><strong><%= @member_weight %></strong> lbs collected</h4>
  </aside>
  <div class="col-md-8">
    <ol class="users list-group">
      <% # For each @member render the _member.html.erb partial %>
      <!-- could list weight logs here -->
    </ol>

    <%= form_for([:user, @weight]) do |f| %>

      <%= f.hidden_field :member_id, :value => @member.id %>

      <%= f.label :weight %>
      <div class="input-group input-group-lg">
        <%= f.number_field :weight, class: 'form-control', id: 'weight_log_input' %>
        <span class="input-group-addon" id="basic-addon">lbs</span>
        <span class="input-group-btn">
          <%= f.submit "Log weight", class: "btn btn-primary" %>
        </span>
      </div>

    <% end %>

    <div class="weight-log-buttons btn-group btn-group-justified" id="weight_buttons" role="group" aria-label="...">
      <div class="btn-group btn-group-lg" role="group">
        <button type="button" class="btn btn-success" id="+50">+50</button>
      </div>
      <div class="btn-group btn-group-lg" role="group">
        <button type="button" class="btn btn-success" id="+10">+10</button>
      </div>
      <div class="btn-group btn-group-lg" role="group">
        <button type="button" class="btn btn-success" id="+5">+5</button>
      </div>
      <div class="btn-group btn-group-lg" role="group">
        <button type="button" class="btn btn-success" id="+1">+1</button>
      </div>
    </div>

    <div class="weight-log-buttons btn-group btn-group-justified" role="group" aria-label="...">
      <div class="btn-group btn-group-lg" role="group">
        <button type="button" class="btn btn-danger" id="-50">-50</button>
      </div>
      <div class="btn-group btn-group-lg" role="group">
        <button type="button" class="btn btn-danger" id="-10">-10</button>
      </div>
      <div class="btn-group btn-group-lg" role="group">
        <button type="button" class="btn btn-danger" id="-5">-5</button>
      </div>
      <div class="btn-group btn-group-lg" role="group">
        <button type="button" class="btn btn-danger" id="-1">-1</button>
      </div>
    </div>

  </div>
</div>
